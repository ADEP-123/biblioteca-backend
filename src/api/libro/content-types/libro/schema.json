{
  "kind": "collectionType",
  "collectionName": "libros",
  "info": {
    "singularName": "libro",
    "pluralName": "libros",
    "displayName": "Libro"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "isbn": {
      "type": "uid"
    },
    "titulo": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "editorial": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::editorial.editorial"
    },
    "idioma": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "edicion": {
      "type": "string",
      "required": true,
      "maxLength": 30
    },
    "categoria": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::categoria.categoria"
    },
    "resumen": {
      "type": "text"
    },
    "autors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::autor.autor",
      "inversedBy": "libros"
    },
    "libro_localidads": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::libro-localidad.libro-localidad",
      "mappedBy": "id_libro"
    }
  }
}
